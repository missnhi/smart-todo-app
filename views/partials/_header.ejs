<!--
name of this file starts with an underscore (_).
This is to signify that it's a partial, in this case, a header partial.-->

<header>
    <nav class="navbar navbar-expand-md navbar-light">
        <a class="navbar-brand" href="/">Smart TODO</a>
        <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup"
                aria-expanded="false"
                aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/todos">To Dos</a>
            </div>
            <div class="navbar-nav ml-auto">
                <% if (user) { %>
                    <span class="navbar-text mr-3">Logged in as: <%= user.email %>!</span>
                    <form class="form-inline" action="/auth/logout" method="POST">
                        <button type="submit" class="btn btn-outline-light">Logout</button>
                    </form>
                <% } else { %>
                    <a class="nav-item nav-link" href="/auth/register">Register</a>
                    <a class="nav-item nav-link" href="/auth/login">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
</header>
