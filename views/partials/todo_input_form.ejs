<form id="todoForm" action="/api/todo/categorize" method="POST">
  <span class="inout-textbox">
    <label for="itemName" class="form-label">Add a To-Do</label>
    <input
      type="text"
      class="form-control task-name"
      id="itemName"
      name="itemName"
      placeholder="What do you want to remember to do?"
      required
    />
  </span>
  

  <!-- Category announcement and manual change dropdown -->
  <span>
    <label for="categoryDropdown">Add to List:</label>
    <select id="categoryDropdown" name="category" class="select-list">
      <option value="ToWatch">Watchlist</option>
      <option value="ToEat">Restaurants</option>
      <option value="ToRead">Books</option>
      <option value="ToBuy">Products</option>
      <option value="Uncategorized">Uncategorized</option>
    </select>
  </span>

  <button type="submit" class="default-btn">
    <i class="fa-solid fa-magnifying-glass"></i>
    Search
  </button>
</form>

