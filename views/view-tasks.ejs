<!DOCTYPE html>
<html>
  <head>
    <!-- replace "List" with variable -->
    <title>"List" Tasks</title>
    
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('includes') %>

    <script>
      const listData = <%- JSON.stringify(todos) %>;
    </script>
  </head>
  <%- include('partials/_header') %>
  <body>
    <%- include('partials/_hero-banner', {headerText}) %>
    <main>
      <h3>Filter To-Dos</h3>
      <form action='/todos' method="POST" class="filter-todos">
        <select class="select-list" name="sort-by">
          <option value="default-disabled" selected disabled>Sort To-Dos By</option>
          <option value="newest-first">Newest</option>
          <option value="oldest-first">Oldest</option>
          <option value="AtoZ">A-Z</option>
          <option value="ZtoA">Z-A</option>
          <option value="completion">Completion</option>
          <option value="due-date">Due Date</option>
        </select>
        <input type="checkbox" id="completed-only" name="completed-only" value="completed-only" checked>
        <label for="completed-only">Completed</label>
        <input type="checkbox" id="in-progress-only" name="in-progress-only" value="in-progress-only" checked>
        <label for="in-progress-only">In Progress</label>
        <button type="submit" value="submit">Filter</button>
      </form>
      <section id="display-tasks">

      </section>
    </main>
    <%- include('partials/_footer') %>
  </body>
</html>